{% extends 'WGAuditBundle::base.html.twig' %}

{% block body %}
<div class="container">
    <div class="inline">
        <h3>Forms</h3>
        <a class="btn btn-small" href="{{ path( 'wgauditform_add' ) }}">Add a new form</a>
    </div>
    <table class="table table-condensed table-hover">
        <caption>List of existing Forms</caption>
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Is the form Active?</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for form in forms %}
                <tr>
                    <td>{{ form.title }}</td>
                    <td>{{ form.description }}</td>
                    <td>{% if  form.active == 1 %}
                            <i class="icon-check"/>
                        {% else %}
                            <i class="icon-check-empty"/>
                        {% endif %}
                    </td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-mini" href="{{ path( 'wgauditform_view', { 'id': form.id } ) }}"><i class="icon-eye-open"></i> View</a>
                            <a class="btn btn-mini dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="{{ path( 'wgauditform_edit', { 'id': form.id } ) }}"><i class="icon-pencil"></i> Edit</a></li>
                                <li><a href="{{ path( 'wgauditform_delete', { 'id': form.id } ) }}"><i class="icon-trash"></i> Delete</a></li>
                            </ul>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no forms yet</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}