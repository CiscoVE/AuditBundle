{% extends 'WGAuditBundle::base.html.twig' %}

{% block body %}

    <table id="audit">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Is the form Active?</th>
                <th></th>
            </tr>        
        </thead>
        <tbody>
            {% for form in forms %}
                <tr>
                    <td>{{ form.title }}</td>
                    <td>{{ form.description }}</td>
                    <td>{%if form.active == true %}
                            YES
                        {% else %}
                            NO
                        {% endif %}
                    </td>
                    <td>[ <a href="{{ path( 'wgaudit_add', { 'id' : form.id } ) }}">pick</a> ]</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no forms yet</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}