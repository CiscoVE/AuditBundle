{% extends 'CiscoSystemsAuditBundle::base.html.twig' %}

{% block pagecontent %}
<div class="container">
    <div class="span10 offset1">
        <legend>Forms:</legend>
        <table class="table table-condensed table-hover">
            <caption>List of existing Forms</caption>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Is the form Active?</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for form in forms %}
                    <tr>
                        <td>{{ form.title }}</td>
                        <td>{{ form.description }}</td>
                        <td>{%if form.active == true %}
                                YES
                            {% else %}
                                NO
                            {% endif %}
                        </td>
                        <td>
                            <a class="btn btn-mini" 
                               href="{{ path( 'audit_add', { 'id' : form.id } ) }}">
                                <i class="icon-edit"></i> Pick
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr class="warning-empty">
                        <td colspan="6">
                            <i class="icon-warning-sign"></i> 
                            No form.
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}