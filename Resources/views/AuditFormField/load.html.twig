{% block body %}
<tr class="wgaudit-field-row">
    <td>{{ field.title }}</td>
    <td>{{ field.description }}</td>
    <td>{{ field.weight }}</td>
    <td>{% if field.fatal == 1 %}
            <i class="icon-check"/>
        {% else %}
            <i class="icon-check-empty"/>
        {% endif %}
    </td>
    <td>
        <div class="btn-group">
            <a class="btn btn-mini" 
               href="{{ path( 'wgauditformfield_view', { 'id': field.id } ) }}">
                <i class="icon-eye-open"></i> View
            </a>
            <noscript>
                <a class="btn btn-mini"
                    href="{{ path( 'wgauditformfield_edit', { 'id': field.id } ) }}">
                    <i class="icon-pencil"></i> Edit
                </a>
                <a class="btn btn-mini" 
                   href="{{ path( 'wgauditformsection_remove', { 'id' : section.id ,'field_id': field.id } ) }}">
                    <i class="icon-minus"></i> Remove
                </a>                
            </noscript>
            <a class="btn btn-mini dropdown-toggle" data-toggle="dropdown" href="#">
                <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
                <li>
                    <a href="{{ path( 'wgauditformfield_edit', { 'id': field.id } ) }}">
                        <i class="icon-pencil"></i> Edit
                    </a>
                </li>
                <li>
                    <a class="audit-field-remove" 
                       href="{{ path( 'wgauditformsection_remove', { 'id' : section.id ,'field_id': field.id } ) }}">
                        <i class="icon-minus"></i> Remove
                    </a>
                </li>
            </ul>
        </div>
    </td>
</tr>
{% endblock %}
