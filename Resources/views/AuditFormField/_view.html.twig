{% block body %}
<table class="table table-condensed table-hover">
    <caption>Field ID number: {{ field.id }}</caption>
    <tbody>
        <tr>
            <td>
                <strong>Title: </strong>
            </td>
            <td>{{ field.title }}</td>
            <td>
                <strong>Section: </strong>
            </td>
            <td>{{ field.section }}</td>
            <td>
                <strong>Weight: </strong>
            </td>
            <td>{{ field.weight }}</td>
            <td>
                <strong>Fatal: </strong>
            </td>
            <td>
            {% if field.fatal == 1 %}
                <i class="icon-check"/>
            {% else %}
                <i class="icon-check-empty"/>
            {% endif %}
            </td>
        </tr>
        <tr>
            <td><strong>Description: </strong></td>
            <td colspan="7">{{ field.description }}</td>
        </tr>
        <tr>
            <td><strong>Scores: </strong></td>
            <td colspan="7">
            {% for score, label in field.scores %}
                <div>
                    {{ score }}: {{ label }}
                </div>
            {% else %}
                <div>No scores defined</div>
            {% endfor %}
            </td>
        </tr>
    </tbody>
</table>
{% endblock %}
