{% extends 'WGAuditBundle::base.html.twig' %}

{% block body %}

    <h2>Field:</h2>

    <table id="audit">
        <thead>
            <tr>
                <th>Title</th>
                <th>Section</th>
                <th>Weight</th>
                <th>description</th>
                <th>Scores</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ field.title }}</td>
                <td>{{ field.section }}</td>
                <td>{{ field.weight }}</td>
                <td>{{ field.description }}</td>
                <td>{% for score, label in field.scores %}
                        <div>
                            {{ score }}: {{ label }}
                        </div>
                    {% else %}
                        <div>No scores defined</div>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>
    
    <div class="row-header">
        <span>Title</span>
        <span>Section</span>
        <span>Weight</span>
    </div>
    <div class="row-data">
        <span>{{ field.title }}</span>
        <span>{{ field.section }}</span>
        <span>{{ field.weight }}</span>
    </div>
        <span class="row-header">Description</span>  
    </div>
    <div class="row-data">
        <span>{{ field.description }}</span>  
    </div>
    </div>
        <span class="row-header">Scores</span>  
    </div>
    <div class="row-data">      
        {% for score, label in field.scores %}
        <span>
            {{ score }}: {{ label }}
        </span>
        {% else %}
        <span>No scores defined</span>
        {% endfor %}
    </div>
        
{% endblock %}
