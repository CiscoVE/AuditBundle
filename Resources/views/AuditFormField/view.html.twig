{% extends 'WGAuditBundle::base.html.twig' %}

{% block body %}

    <h2>Field:</h2>

    <table id="audit">
        <thead>
            <tr>
                <th>Title</th>
                <th>Section</th>
                <th>Weight</th>
                <th>description</th>
                <th>Scores</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ field.title }}</td>
                <td>{{ field.section }}</td>
                <td>{{ field.weight }}</td>
                <td>{{ field.description }}</td>
                <td>{% for score, label in field.scores %}
                        <div>
                            {{ score }}: {{ label }}
                        </div>
                    {% else %}
                        <div>No scores defined</div>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>
       
{% endblock %}
