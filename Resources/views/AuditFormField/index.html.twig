{% extends 'WGAuditBundle::base.html.twig' %}

{% block body %}
<div class="container">
    <h3>Existing Fields</h3>

    <table class="table table-condensed table-hover">
        <caption>List of existing fields</caption>
        <tbody>
            {% for field in fields %}
                <tr>
                    <td>Title: </td>
                    <td>{{ field.title }}</td>
                    <td>Section: </td>
                    <td>{{ field.section }}</td>
                    <td>Weight: </td>
                    <td>{{ field.weight }}</td>
                    <td>Fatal: </td>
                    <td>{% if field.fatal == 1 %}
                            <div>Yes</div>
                        {% else %}
                            <div>No</div>
                        {% endif %}
                    </td>
                    <td><a href="{{ path( 'wgauditformfield_view', { 'id': field.id } ) }}" class="btn btn-mini"><i class="icon-eye-open"/></a></td>
                    <td><a href="{{ path( 'wgauditformfield_edit', { 'id': field.id } ) }}" class="btn btn-mini"><i class="icon-edit"/></a></td>
                    <td><a href="{{ path( 'wgauditformfield_delete', { 'id': field.id } ) }}" class="btn btn-mini"><i class="icon-remove"/></a></td>
                </tr>
                <tr>
                    <td>Description: </td>
                    <td colspan="10">{{ field.description }}</td>
                </tr>
                <tr>
                    <td>Scores: </td>
                    <td colspan="10">{% for score, label in field.scores %}
                            <div>
                                {{ score }}: {{ label }}
                            </div>
                        {% else %}
                            <div>No scores defined</div>
                        {% endfor %}
                    </td>
                </tr>

            {% else %}
                <tr>
                    <td colspan="9" align="center">no fields yet</td>
                </tr>
            {% endfor %}
            <tr>
                <td colspan="11" align="center"><a href="{{ path( 'wgauditformfield_add' ) }}" class="btn btn-small">Add a new field</a></td>
            </tr>
        </tbody>
    </table>
</div>
{% endblock %}
