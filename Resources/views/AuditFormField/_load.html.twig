{% block pagecontent %}
<tr class="cisco-audit-field-row">
    <td colspan="2">{{ field.title }}</td>
    <td>{{ field.weight }}</td>
    <td>
    {% if field.fatal == 1 %}
        <i class="icon-check"/>
    {% else %}
        <i class="icon-check-empty"/>
    {% endif %}
    </td>
    <td>
        <div class="btn-group">
            <a class="btn btn-mini cisco-audit-field-view">
                <i class="icon-eye-open" title="View"></i> 
            </a>  
            <a class="btn btn-mini cisco-audit-field-edit"
                href="{{ path( 'cisco_auditformfield_edit', { 'id': field.id } ) }}">
                <i class="icon-wrench" title="Edit"></i> 
            </a>  
            <a class="btn btn-mini cisco-audit-field-remove" 
               href="{{ path( 'cisco_auditformsection_remove', { 'id' : section.id ,'field_id': field.id } ) }}">
                <i class="icon-minus" title="Remove"></i> 
            </a>
        </div>
    </td>
</tr>
<tr class="cisco-audit-desc-row">
    <td><i>Description: </i></td>
    <td colspan="4">{{ field.description }}</td>
</tr>
<tr class="cisco-audit-desc-row">
    <td><i>Scores: </i></td>
    <td colspan="4">
    {% for score, label in field.scores %}
        <div>
            {{ score }}: {{ label }}
        </div>
    {% else %}
        <div>No scores defined</div>
    {% endfor %}
    </td>
</tr>
{% endblock %}
