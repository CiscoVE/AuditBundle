{% block pagecontent %}
<tr class="cisco-audit-field-row">
    <td colspan="2" style="padding-left: 50px;">{{ field.title }}</td>
    <td>{{ field.weight }}</td>
    <td>
    {% if field.flag == 1 %}
        <i class="icon-check"/>
    {% else %}
        <i class="icon-check-empty"/>
    {% endif %}
    </td>
    <td style="padding: 0 0 0 0 ">
        <div class="btn-group pull-right cisco-audit-options" style="display: none;">
            <a class="btn btn-mini cisco-audit-field-view">
                <i class="icon-eye-open" title="View Field's details"></i>
            </a>
            <a class="btn btn-mini cisco-audit-field-edit"
                href="{{ path( 'cisco_auditfield_edit', { 'field_id': field.id } ) }}">
                <i class="icon-wrench" title="Edit Field"></i>
            </a>
            <a class="btn btn-mini cisco-audit-field-remove"
               href="{{ path( 'cisco_auditsection_remove', { 'section_id' : section.id ,'field_id': field.id } ) }}">
                <i class="icon-minus" title="Remove Field"></i>
            </a>
        </div>
    </td>
</tr>
<tr class="cisco-audit-desc-row info" style="display: none;">
    <td style="padding-left: 50px;">
        <div class="text-info">
            <i>Description: </i>
        </div>
    </td>
    <td colspan="4">
        <h4 class="text-info">
            {{ field.description }}
        </h4>
    </td>
</tr>
<tr class="cisco-audit-desc-row info" style="display: none;">
    <td style="padding-left: 50px;">
        <div class="text-info"><i>Scores: </i></div>
    </td>
    <td colspan="4">
        <div class="info">
        {% for score, label in field.scores %}
            <div class="text-info">
                {{ score }} - {{ label }}
            </div>
        {% else %}
            <div>No scores defined</div>
        {% endfor %}
        </div>
    </td>
</tr>

{% endblock %}