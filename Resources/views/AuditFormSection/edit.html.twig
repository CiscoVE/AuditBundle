{% extends 'CiscoSystemsAuditBundle::base.html.twig' %}

{% block body %}
<div class="container">
    <div class="span10 offset1">
        <form class="form-horizontal" method="POST" action="">
            <legend>
            {% if edit == true %}
                Editing section: {{ section.title }}
            {% else %}
                Add new section
            {% endif %}
                <div class="btn-group pull-right">
                    <button type="submit" class="btn btn-mini">
                        <i class="icon-ok"></i> Save Section
                    </button>
                    {% if edit == true %}
                    <noscript>
                        <a class="btn btn-mini"
                           href="#">
                            <i class="icon-plus"></i> Add new Field
                        </a>
                        {% if edit == true %}
                        <a class="btn btn-mini"
                            href="{{ path( 'cisco_auditformsection_delete', { 'id' : section.id  } ) }}">
                            <i class="icon-trash"></i> Delete Section
                        </a>
                        {% endif %}
                    </noscript>
                    <a class="btn btn-mini dropdown-toggle" data-toggle="dropdown" href="#">
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li>
                            <a class="cisco-audit-section-new" data-section-id="{{ section.id }}"
                               href="#">
                                <i class="icon-pencil"></i> Add Field
                            </a>
                        </li>
                        {% if ufields is not empty %}
                            <li class="divider"></li>
                            {% for field in ufields %}
                            <li>
                                <a class="cisco-audit-field-add" data-field-id="{{ field.id }}"
                                   href="{{ path( 'cisco_auditformsection_add_field', { 'id' : section.id ,'field_id': field.id } ) }}">
                                    <i class="icon-plus"></i> {{ field.title }}
                                </a>
                            </li>
                            {% endfor %}
                        <li class="divider"></li>
                        {% endif %}
                        <li>
                            <a class="cisco-audit-section-delete" data-section-id="{{ section.id }}"
                               href="{{ path( 'cisco_auditformsection_delete', { 'id' : section.id  } ) }}">
                                <i class="icon-trash"></i> Delete Section
                            </a>
                        </li>
                    </ul>
                    {% endif %}
                </div>
            </legend>
            <div class="controls controls-row">
                <div class="control-group">
                    <div class="control-label">
                        {{ form_label(form.title) }}
                    </div>
                    <div class="controls">
                        {{ form_widget(form.title) }}
                        {{ form_errors(form.title) }}
                    </div>
                </div>
                <div class="control-group">
                    <div class="control-label">
                        {{ form_label(form.auditform) }}
                    </div>
                    <div class="controls">
                        {{ form_widget(form.auditform) }}
                        {{ form_errors(form.auditform) }}
                    </div>
                </div>
            </div>
            <div class="controls controls-row">
                <div class="control-group">
                    <div class="control-label">
                        {{ form_label(form.description) }}
                    </div>
                    <div class="controls">
                        {{ form_widget(form.description, { 'attr': { 'class': 'input-xxlarge' }}) }}
                        {{ form_errors(form.description) }}
                    </div>
                </div>
                <div class="controls">
                    {{ form_rest(form) }}
                </div>
            </div>
        </form>

        <table class="table table-condensed cisco-audit-table">
            <caption>List of fields contained in this section</caption>
            <thead>
                <tr>
                    <th width=20%>Title</th>
                    <th width=65%></th>
                    <th width=5%>Weight</th>
                    <th width=5%>Fatal</th>
                    <th width=5%></th>                    
                </tr>
            </thead>
            <tbody>
            {% for field in section.fields %}
                {% include 'CiscoSystemsAuditBundle:AuditFormField:_load.html.twig' %}
            {% else %}
                <tr>
                    <td colspan="5">
                        <div class="alert alert-error">
                            <button type="button" class="close" data-dismiss="alert">Ã—</button>
                            <h4>Warning!</h4>
                            <p>No fields yet.</p>
                        </div>
                    </td>
                </tr>
            {% endfor %}
                <noscript>
                {% if ufields is not empty and section.id is not null %}
                    <tr>
                        <td colspan="5">
                            {% for field in ufields %}
                                <a class="btn btn-mini" 
                                   href="{{ path( 'cisco_auditformsection_add_field', { 'id' : section.id ,'field_id': field.id } ) }}">
                                    <i class="icon-plus"></i> Add Field: {{ field.title }}
                                </a>
                            {% endfor %}                       
                        </td>
                    </tr>
                {% endif %}
                </noscript>
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
