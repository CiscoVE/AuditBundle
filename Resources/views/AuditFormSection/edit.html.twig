{% extends 'CiscoSystemsAuditBundle::base.html.twig' %}

{% block pagecontent %}
<div class="container">
    <div class="span10">
        <form class="form-horizontal" method="POST" action="">
            <legend>
            {% if edit == true %}
                Editing section: {{ section.title }}
            {% else %}
                Add new section
            {% endif %}
                <div class="btn-group pull-right">
                    <button type="submit" class="btn btn-mini">
                        <i class="icon-ok"></i> Save Section
                    </button>
                    <a class="btn btn-mini" href="#" title="TO BE IMPLEMENTED">
                        <i class="icon-trash"></i> Delete section
                    </a>
                </div>
            </legend>
            <div class="controls controls-row">
                <div class="control-group">
                    <div class="control-label">
                        {{ form_label(form.title) }}
                    </div>
                    <div class="controls">
                        {{ form_widget(form.title) }}
                        {{ form_errors(form.title) }}
                    </div>
                </div>
                <div class="control-group">
                    <div class="control-label">
                        {{ form_label(form.auditform) }}
                    </div>
                    <div class="controls">
                        {{ form_widget(form.auditform) }}
                        {{ form_errors(form.auditform) }}
                    </div>
                </div>
            </div>
            <div class="controls controls-row">
                <div class="control-group">
                    <div class="control-label">
                        {{ form_label(form.description) }}
                    </div>
                    <div class="controls">
                        {{ form_widget(form.description, { 'attr': { 'class': 'input-xxlarge' }}) }}
                        {{ form_errors(form.description) }}
                    </div>
                </div>
                <div class="controls">
                    {{ form_rest(form) }}
                </div>
            </div>
        </form>

        <table class="table table-condensed cisco-audit-table">
            <caption>List of fields contained in this section</caption>
            <thead>
                <tr>
                    <th width=20%>Title</th>
                    <th width=60%></th>
                    <th width=5%>Weight</th>
                    <th width=5%>Fatal</th>
                    <th width=10%></th>                    
                </tr>
            </thead>
            <tbody>
            {% for field in section.fields %}
                {% include 'CiscoSystemsAuditBundle:AuditFormField:_load.html.twig' %}
            {% else %}
                <tr class="warning-empty">
                    <td colspan="6">
                        <i class="icon-warning-sign"></i> 
                        No field assigned to this section.
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {% include 'CiscoSystemsAuditBundle:AuditFormField:_ulist.html.twig' %}
    </div>
</div>
{% endblock %}
