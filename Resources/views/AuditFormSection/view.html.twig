{# AuditformSection::view.html.twig #}

{% extends 'CiscoSystemsAuditBundle::base.html.twig' %}

{% block body %}
<div class="container">
    <div class="span10 offset1">
        <legend>Section: {{ section.title }}
            <div class="btn-group pull-right">
                <a class="btn btn-mini" 
                   href="{{ path( 'cisco_auditformsection_edit', { 'id': section.id } ) }}">
                    <i class="icon-wrench"></i> Edit
                </a>
                <noscript>
                    <a class="btn btn-mini"
                        href="{{ path( 'cisco_auditformsection_delete', { 'id': section.id } ) }}">
                        <i class="icon-trash"></i> Delete
                    </a>
                </noscript>
                <a class="btn btn-mini dropdown-toggle" data-toggle="dropdown" href="#">
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    <li>
                        <a href="{{ path( 'cisco_auditformsection_delete', { 'id': section.id } ) }}">
                            <i class="icon-trash"></i> Delete
                        </a>
                    </li>
                </ul>
            </div>
        </legend>
        <table class="table table-condensed">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ section.auditform }}</td>
                    <td>{{ section.description }}</td>
                </tr>
            </tbody>
        </table>

        <table class="table table-condensed">
            <caption>List of fields contained in this section</caption>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>description</th>
                    <th>Weight</th>
                    <th>Fatal</th>
                </tr>
            </thead>
            <tbody>
            {% for field in section.fields %}
                <tr>
                    <td>{{ field.title }}</td>
                    <td>{{ field.description }}</td>
                    <td>{{ field.weight }}</td>
                    <td>{% if field.fatal == 1 %}
                            <i class="icon-check"/>
                        {% else %}
                            <i class="icon-check-empty"/>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td>
                        <div class="alert alert-error">
                            <button type="button" class="close" data-dismiss="alert">Ã—</button>
                            <h4>Warning!</h4>
                            <p>No fields yet.</p>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
