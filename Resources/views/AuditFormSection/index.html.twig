{% extends 'WGAuditBundle::base.html.twig' %}

{% block body %}

    <h2>Listing existing Sections:</h2>

    <table class="data">
        <thead>
            <tr>
                <th>Title</th>
                <th>AuditForm</th>
                <td>Description</td>
                <th>View</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            {% for section in sections %}
                <tr>
                    <td>{{ section.title }}</td>
                    <td>{{ section.auditform }}</td>
                    <td>{{ section.description }}</td>
                    <td>[ <a href="{{ path( 'wgauditformsection_view', { 'id': section.id } ) }}">view</a> ]</td>  
                    <td>[ <a href="{{ path( 'wgauditformsection_edit', { 'id': section.id } ) }}">edit</a> ]</td>
                    <td>[ <a href="{{ path( 'wgauditformsection_remove', { 'id': section.id } ) }}">delete</a> ]</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no sections yet</td>
                </tr>
            {% endfor %}
                <tr>
                    <td colspan="3" align="center">
                        <a href="{{ path( 'wgauditformsection_add' ) }}">Add a new section</a>
                    </td>
                </tr>
        </tbody>
    </table>        
{% endblock %}
