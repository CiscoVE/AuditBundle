{% extends 'CiscoSystemsAuditBundle::base.html.twig' %}

{% block pagecontent %}
{{ parent() }}
<div class="container">
    <div class="span10 offset1">
        <legend>Audits
            <a class="btn btn-mini pull-right"
               href="{{ path( 'audit_form_list' ) }}">
                <i class="icon-plus"></i> Create new Audit
            </a>
        </legend>
        <table class="table table-hover">
            <caption>List of completed Audits</caption>
            <thead>
                <tr>
                    <th>Case #</th>
                    <th>Auditing User</th>
                    <th>Form</th>
                    <th>Score</th>
                    <th></th>
                </tr>
            </thead>
        {% for audit in audits %}
            {% set result = audit.totalResult %}
            <tbody>
                <tr>
                    <td>{{ audit.reference }}</td>
                    <td>{{ audit.auditor }}</td>
                    <td>{{ audit.form }}</td>
                    <td>
                    {% if audit.flag == true %}
                        <div class="text-warning">{{ audit.form.flagLabel }}</div>
                    {% else %}
                        {{ result }}
                    {% endif %}
                    </td>
                    <td width="10%">
                        <a class="btn btn-mini"
                            href="{{ path( 'audit_view', { 'id': audit.id } ) }}">
                            <i class="icon-eye-open"></i> View
                        </a>
                    </td>
                </tr>
        {% else %}
            <tr>
                <td colspan="5">
                    <div class="alert alert-error">
                        <button type="button" class="close" data-dismiss="alert">Ã—</button>
                        <h4>Warning!</h4>
                        <p>No audit yet.</p>
                    </div>
                </td>
            </tr>
        {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}