{# Audit::add.html.twig #}

{% extends 'WGAuditBundle::base.html.twig' %}

{% block body %}
<h2>Create new audit</h2>

<form id="audit" method="POST" action="">

    <table>
        <tr>
            <th>S.No.</th>
            <th>Field</th>
            <th>Score</th>
            <th>Weight</th>
            <th>Reviewer's Comment</th>
        </tr>
        {% set counter = 1 %} 
        {% for section in auditform.sections %}
        <tr class="wgaudit-section">
            <td  class="wgaudit-field" colspan="2">Section {{ loop.index }}: {{ section.title }}</td>
            <td>{#{ section.score }#}</td>
            <td>{#{ section.weight }#}</td>
            <td>
        </tr>
        {% for field in section.fields %}
        <tr>
            <td>{{ counter }}</td>
            <td class="wgaudit-field">{{ field.title }}</td>
            <td>
                {% set form = craue_cloneForm(scoreform) %}
                <select name="score[{{ field.id }}][value]" class="wgaudit-score-selector" data-field-id="{{ field.id }}">
                {% for score, label in field.scores %}
                    <option value="{{ score }}" data-tooltip="{{ label }}" class="tooltip">
                    {{ score }}
                    </option>
                {% endfor %}
            </td>
            <td>{{ field.weight }}</td>
            <td class="wgaudit-field"><textarea name="score[{{ field.id }}][comment]"></textarea></td>
        </tr>
        {% set counter = counter + 1 %}
        {% endfor %}
        <tr>
            <td class="wgaudit-score-final" colspan="2">Section's Score</td>
            <td class="wgaudit-section-score"></td>
            <td class="wgaudit-section-weight">{{ section.weight }}</td>
            <td id="my-element"></td>
        </tr>
        {% endfor %}
        <tr class="wgaudit-section">
            <td class="wgaudit-score-final" colspan="2">Final Score</td>
            <td class="wgaudit-form-score"></td>
            <td class="wgaudit-form-weight">{#{ audit.weight }#}</td>
            <td></td>          
        </tr>
    </table>

    <div>
        <input type="submit" value="save" />
    </div>
</form>

<script type="text/javascript">
    var routePatternCalculateScore = '{{ routePatternCalculateScore }}';
    $(function()
    {
        $( '.wgaudit-score-selector' ).change(function()
        {
            var id = $( this ).attr( 'data-field-id' );
            var val = $( this ).val();
            var url = routePatternCalculateScore.replace( '{id}', id );
            $.ajax(
            {
                url: url,
                dataType: 'text',
                data: { scoreData: val },
                type: 'post',
                error: function( response )
                {
                    console.log( 'error: ' + response );
                },
                success: function( response )
                {
                    console.log( 'success: ' + response );
                    // do something sensible instead
                    $( '#my-element' ).html( response );
                }
            });
        });
    });
</script>

{% endblock %}
