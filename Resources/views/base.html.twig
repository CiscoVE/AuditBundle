<!DOCTYPE html>
<html>
  <head>
    {% block metas %}
      <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    {% endblock %}
    <title>{% block title %}Written Games Audit Bundle{% endblock %}</title>
    {% block favicon %}{% endblock %}
    {% block stylesheets %}
        <link href='http://fonts.googleapis.com/css?family=Orienta' rel='stylesheet' type='text/css' />
        <link href="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.2.1/css/bootstrap-combined.min.css" rel="stylesheet" />
        <style type="text/css">
        body * {
            font-family: 'Orienta', sans-serif;
        }
        body {
            padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
        }
        #overlay {
        display:none;
        width:400px;
        border:10px solid #666;
        border:10px solid rgba(82, 82, 82, 0.698);
        -moz-border-radius:8px;
        -webkit-border-radius:8px;
        }
        #overlay div {
          padding:10px;
          border:1px solid #3B5998;
          background-color:#fff;
          font-family:"lucida grande",tahoma,verdana,arial,sans-serif
        }
        </style>
    {% endblock %}
    {% block javascripts %}
            <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
            <script src="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.2.1/js/bootstrap.min.js"></script>
            <script src="http://cdn.jquerytools.org/1.2.7/full/jquery.tools.min.js"></script>
            <script src="{{ asset( 'bundles/wgaudit/js/wgaudit.js' ) }}" type="text/javascript"></script>
    {% endblock %}
  </head>
  <body>
    {% block subnavigation %}
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="#">Audit Bundle</a>
          <div class="nav-collapse collapse">
            <ul class="nav">
              <li>
                  <a href="{{ path( 'wgaudits' ) }}">view audit list</a>
              </li>
              <li>
                  <a href="{{ path( 'wgauditforms' ) }}">view form list</a>
              </li>
              <li>
                  <a href="{{ path( 'wgauditformsections' ) }}">view section list</a>
              </li>
              <li>
                  <a href="{{ path( 'wgauditformfields' ) }}">view field list</a>
              </li>
              <li>
                  <a href="{{ path( 'wgaudit_iconset' )}}">view iconset</a>
              </li>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>
    {% endblock %}
    {% block body %}
    <div class="apple_overlay" id="overlay-box">
        <div class="contentWrap"></div>
    </div>
    {% endblock %}
  </body>
</html>





