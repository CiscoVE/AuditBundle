{% block pagecontent %}
<tr class="cisco-audit-field-row">
    <td colspan="2" style="padding-left: 50px;">{{ field.title }}</td>
    {% if field.flag == 1 %}
    <td title="not applicable">default</td>
    <td><i class="icon-check"/></td>
    {% else %}
    <td>{{ field.weight }}</td>
    <td><i class="icon-check-empty"/></td>
    {% endif %}
    <td class="options" style="padding: 0 0 0 0 ">
        <div class="btn-group pull-right">
            <a class="btn btn-mini cisco-audit-field-view">
                <i class="icon-eye-open" title="View"></i>
            </a>
            <a class="btn btn-mini cisco-audit-field-edit"
                href="{{ path( 'audit_field_edit', { 'field_id': field.id } ) }}">
                <i class="icon-wrench" title="Edit"></i>
            </a>
            <a class="btn btn-mini cisco-audit-field-remove"
               href="{{ path( 'audit_section_remove', { 'section_id' : section.id ,'field_id': field.id } ) }}">
                <i class="icon-minus" title="Remove"></i>
            </a>
        </div>
    </td>
</tr>
<tr class="cisco-audit-desc-row info" style="display: none;">
    <td style="padding-left: 50px;">
        <div class="text-info">
            <i>Description: </i>
        </div>
    </td>
    <td colspan="4">
        <h4 class="text-info">
            {{ field.description }}
        </h4>
    </td>
</tr>
<tr class="cisco-audit-desc-row info" style="display: none;">
    <td style="padding-left: 50px;">
        <div class="text-info"><i>Scores: </i></div>
    </td>
    <td colspan="4">
        <div class="info">
        {% for choice, label in field.choices %}
            <div class="text-info">
                {{ choice }} - {{ label }}
            </div>
        {% else %}
            <div>No scores defined</div>
        {% endfor %}
        </div>
    </td>
</tr>
{% endblock %}