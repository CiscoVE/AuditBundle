{% extends 'CiscoSystemsAuditBundle::base.html.twig' %}

{% block pagetitle %}
    {{ parent() }}:
    {% if edit == true %}
        Field id: #{{ field.id }}
    {% else %}
        new Field
    {% endif %}
{% endblock %}

{% block pagecontent %}
<div class="container">
    <div class="span10">
        <form class="form-horizontal" method="POST" action="">
            <div class="audit-fieldset audit-fieldset-field">
                <div class="control-group">
                    <div class="control-label">
                        {{ form_label( form.title ) }}
                    </div>
                    <div class="controls" required="required">
                        {{ form_widget( form.title ) }}
                        {{ form_errors( form.title ) }}
                    </div>
                </div>
                <div class="control-group">
                    <div class="control-label">
                        {{ form_label( form.section ) }}
                    </div>
                    <div class="controls">
                        {{ form_widget( form.section ) }}
                        {{ form_errors( form.section ) }}
                    </div>
                </div>
                <div class="control-group">
                    <div class="control-label">
                        {{ form_label( form.flag ) }}
                    </div>
                    <div class="controls">
                        {{ form_widget( form.flag ) }}
                        {{ form_errors( form.flag ) }}
                    </div>
                </div>
                <div class="control-group">
                    <div class="control-label">
                        {{ form_label( form.weight ) }}
                    </div>
                    <div class="controls">
                        {{ form_widget( form.weight ) }}
                        {{ form_errors( form.weight ) }}
                    </div>
                </div>
                <div class="divider"></div>
                <div class="control-group">
                    <div class="control-label">
                        {{ form_label( form.description ) }}
                    </div>
                    <div class="controls">
                        {{ form_widget( form.description ) }}
                        {{ form_errors( form.description ) }}
                    </div>
                </div>
                <div class="control-group">
                    <div class="control-label">
                        {{ form_label( form.critical ) }}
                    </div>
                    <div class="controls">
                        {{ form_widget( form.critical ) }}
                        {{ form_errors( form.critical ) }}
                    </div>
                </div>
                <div class="control-group">
                    <div class="control-label">
                        {{ form_label( form.numericalScore ) }}
                    </div>
                    <div class="controls">
                        {{ form_widget( form.numericalScore ) }}
                        {{ form_errors( form.numericalScore ) }}
                    </div>
                </div>
                <div class="control-group">
                    <div class="control-label">
                        {{ form_label( form.isRemoveFromCalculations ) }}
                    </div>
                    <div class="controls">
                        {{ form_widget( form.isRemoveFromCalculations ) }}
                        {{ form_errors( form.isRemoveFromCalculations ) }}
                    </div>
                </div>
                <div class="control-group">
                    <div class="control-label">
                        {{ form_label( form.answer_yes ) }}
                    </div>
                    <div class="controls">
                        {{ form_widget( form.answer_yes ) }}
                        {{ form_errors( form.answer_yes ) }}
                    </div>
                </div>
                <div class="control-group">
                    <div class="control-label">
                        {{ form_label( form.answer_no ) }}
                    </div>
                    <div class="controls">
                        {{ form_widget( form.answer_no ) }}
                        {{ form_errors( form.answer_no ) }}
                    </div>
                </div>
                <div class="control-group">
                    <div class="control-label">
                        {{ form_label( form.answer_acceptable ) }}
                    </div>
                    <div class="controls">
                        {{ form_widget( form.answer_acceptable ) }}
                        {{ form_errors( form.answer_acceptable ) }}
                    </div>
                </div>
                <div class="control-group">
                    <div class="control-label">
                        {{ form_label( form.answer_not_applicable) }}
                    </div>
                    <div class="controls">
                        {{ form_widget( form.answer_not_applicable ) }}
                        {{ form_errors( form.answer_not_applicable ) }}
                    </div>
                </div>
            </div>
            <div class="row submit">
                <button type="submit" class="btn btn-primary btn-small">
                    Save <i class="icon-ok icon-white"></i>
                </button>
                {% if field.section.id is defined %}
                    <a class="btn btn-primary btn-small"
                        href="{{ path( 'audit_section_edit', { 'section_id': field.section.id } ) }}">
                         Cancel <i class="icon-remove icon-white"></i>
                    </a>
                {% endif %}
                {% if edit == true %}
                    <a class="btn btn-danger btn-small" href="#deleteModal"
                       href="#deleteModal" role="button" data-toggle="modal"
                        {# href="{{ path( 'audit_field_delete', { 'field_id': field.id } ) }}"#}>
                         Delete <i class="icon-trash icon-white"></i>
                    </a>
                {% endif %}
            </div>
        </form>
        <!-- bootstrap modal box: http://getbootstrap.com/2.3.2/javascript.html#modals -->
        <!-- Button to trigger modal -->
        <!--<a href="#deleteModal" role="button" class="btn btn-danger btn-small" data-toggle="modal">
            Delete <i class="icon-trash icon-white"></i>
        </a>

        <!-- Modal -->
        <div id="deleteModal" class="modal hide fade" tabindex="-1"
             role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
            <div class="modal-header audit-modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                <h1 id="deleteModalLabel" class="warning">
                    Please take note of the following:
                </h1>
            </div>
            <div class="modal-body">
                <p>
                    Deleting this Field will result in its none availability in the future.
                    If you want to simply remove it from a section, please do
                    so from the 'edit section' page instead.
                </p>
            </div>
            <div class="modal-footer">
                <button class="btn" data-dismiss="modal" aria-hidden="true">
                    Cancel
                </button>
                <a class="btn btn-warning"
                   href="{{ path( 'audit_field_delete', { 'field_id': field.id } ) }}">
                    <i class="icon-warning-sign icon-white"></i> Confirm Delete
                </a>
            </div>
        </div>
        <script type="text/javascript">
            var multipleAllowed = {{ field.section.form.allowMultipleAnswer | json_encode() }};
            var flagged = {{ field.flag | json_encode()}};
        </script>
    </div>
</div>
{% endblock %}